doctype html
html(lang='en')
  head
    title Atheist Childrens' Books
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
  each val in styles
    link(rel='stylesheet', href=val)      
  body
    div.stage
      header
        div.logo
          h1
            img(class='atheist', src='/img/atheist.png', alt='atheist')
            img(class='childrens', src='/img/childrens.png', alt='childrens')
            img(class='books', src='/img/books.png', alt='books')
            span
              Atheist Childrens' Books
          div.cloud
            img(src='/img/cloud.png', alt='cloud')
          div.sun
            div.wrapper
                img(class='centre', src='/img/sun-centre.png', alt='sun')
                img(class='rays', src='/img/sun-rays.png', alt='sun rays')
          div.bg-clouds
            img(src='/img/bg-clouds.png', alt='clouds')
        div.questions-corner
          div.wrapper
            img(class='balloon', src='/img/balloon.png', alt='balloon')
            img(class='question', src='/img/question.png', alt='question')
        include ./modules/nav.jade
      main#main
        include ./modules/swiper.jade
      include ./modules/footer.jade
    include ./modules/overlay.jade
    include ./modules/loading.jade

    if vendor
      each val in vendor
        script(src=val, type='text/javascript')
    each val in scripts.body
      script(src=val, type='text/javascript')