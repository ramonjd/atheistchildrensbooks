doctype html
html(lang='en')
  head
    title Atheist Childrens' Books
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
  each val in styles
    link(rel='stylesheet', href=val)      
  body.no-touch
    div.stage
      header
        div.logo
          h1
            img(class='atheist', src='/img/atheist.png', alt='atheist')
            img(class='childrens', src='/img/childrens.png', alt='childrens')
            img(class='books', src='/img/books.png', alt='books')
            span
              Atheist Childrens' Books
          div.cloud
            img(src='/img/cloud.png', alt='cloud')
          div.spaceship.bounceIn.animated
            img(src='/img/spaceship.png', alt='spaceship')
          div.sun
            div.wrapper
                img(class='centre', src='/img/sun-centre.png', alt='sun')
                img(class='rays', src='/img/sun-rays.png', alt='sun rays')
          div.bg-clouds
            img(src='/img/bg-clouds.png', alt='clouds')
        div.questions-corner
          div.wrapper
            img(class='balloon', src='/img/balloon.png', alt='balloon')
            img(class='question', src='/img/question.png', alt='question')
        div.planets
          ul
            li.planet.one
              img(src='/img/planet-1.png', alt='planet')
            li.planet.two
              img(src='/img/planet-2.png', alt='planet')
            li.planet.three
              img(src='/img/planet-3.png', alt='planet')
            li.planet.four
              img(src='/img/planet-4.png', alt='planet')
            li.sun
              img(src='/img/sun-centre.png', alt='sun')
        include ./modules/nav.jade
        div.header-content
          div.row
            div.col-md-12
              p If you want to know more about why we need more sites like this
              p If you want to know more about why we need more sites like this
              p If you want to know more about why we need more sites like this
              p If you want to know more about why we need more sites like thi
      main#main
        include ./modules/swiper.jade
      include ./modules/footer.jade
    include ./modules/overlay.jade
    include ./modules/loading.jade
    if vendor
      each val in vendor
        script(src=val, type='text/javascript')
    each val in scripts.body
      script(src=val, type='text/javascript')