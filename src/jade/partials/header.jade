header
  div.logo
    a.logo-wrapper(href='/')
      img(class='atheist', src='/img/atheist.png', alt='atheist')
      img(class='childrens', src='/img/childrens.png', alt='children\'s')
      img(class='books', src='/img/books.png', alt='books')
      span
        Atheist Children's Books
    div.cloud
      img(src='/img/cloud.png', alt='cloud')
    div.sun
      div.wrapper(ng-if='showSun')
        img(class='centre', src='/img/sun-centre.png', alt='sun')
        img(class='rays', src='/img/sun-rays.png', alt='sun rays')
    div.spaceship(ng-if='showSpaceShip')
      img(src='/img/spaceship.png', alt='spaceship')
    div.bg-clouds
      img(src='/img/bg-clouds.png', alt='clouds')
  div.questions-corner
    div.wrapper
      img(class='balloon', src = '/img/balloon.png', alt = 'balloon', ng-if='showBalloon')
      img(class='boat', src='/img/boat.png', alt='boat', ng-if='showBoat')
      div(class='waves-opaque', ng-if='showBoat')

  include ../includes/nav